<div class="container">
  <div class="header">
    <h1><%= @task.title %></h1>
    <div class="btn btn-outline-primary">
      <%= link_to "Edit this task", edit_task_path(@task) %>
    </div>
  </div>


  <p style="padding: 24px 32px; background-color: rgba(0,0,0,0.2); border-radius: 8px"><%= @task.details %></p>
  <% if @task.completed %>
        <input type="checkbox" checked="checked">
        <label>This task is completed</label>
        <%= link_to "Delete", task_path(@task), method: :delete %>
  <% else %>
        <input type="checkbox">
        <label>This task still needs to be completed</label>
        <%= link_to "Delete", task_path(@task), method: :delete %>
  <% end %>
  <div style="border-bottom: 1px rgba(0,0,0,0.2); width: 100%"> </div>
  <br>
  <%= link_to "Back to List", tasks_path %>
</div>
